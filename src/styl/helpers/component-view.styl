.component-view
	margin $bl 0 ($bl * 2)
	
.component-view__example
	border 1px solid $lightGrey
	border-top-right-radius $borderRadius
	border-top-left-radius $borderRadius
	margin 0 $xPadding
	padding ($bl * 1/3) ($bl * 1/2)

.component-view__desc
	line-height 1.3
	margin-bottom $bl

.component-view__docs
	margin ($bl * 1/3) 0
	
.component-view__code
	background $lightGrey
	margin 0 $xPadding ($bl * .5)
	padding ($bl * 1/3) ($bl * 1/2)
	font-family Monaco, sans-serif
	line-height 1.5
	border-bottom-right-radius $borderRadius
	border-bottom-left-radius $borderRadius